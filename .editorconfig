root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
max_line_length = 100

[{*.vue,*.js}]
indent_size = 2
max_line_length = 100

[{*.json,*.scss,*.yml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100
